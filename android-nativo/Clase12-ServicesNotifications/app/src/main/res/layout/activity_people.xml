<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".PeopleActivity">

    <ListView
        android:id="@+id/peopleList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="false"
        android:divider="@color/gray"
        android:dividerHeight="2dp"
        android:maxWidth="500dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/randomPeopleBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomPeopleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:drawableLeft="@drawable/baseline_person_add_24"
        android:drawableTint="@color/white"
        android:backgroundTint="@color/orange_700"
        android:text="AÃ±adir una persona aleatoria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_editor_absoluteX="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>